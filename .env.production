# Production Environment Configuration
NODE_ENV=production

# Database (use managed database in production)
DATABASE_URL=postgresql://username:password@your-db-host:5432/xclips

# Redis (use managed Redis in production)
REDIS_URL=redis://your-redis-host:6379

# S3 Storage (use AWS S3 or compatible service)
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-aws-access-key
S3_SECRET_KEY=your-aws-secret-key
S3_BUCKET=your-production-bucket

# Authentication (CRITICAL: Change these in production)
JWT_SECRET=your-production-jwt-secret-should-be-very-long-and-random
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-production-nextauth-secret-should-be-very-long-and-random

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Keys
OPENAI_API_KEY=your-openai-api-key

# Payment Gateways
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Observability
OTEL_DISABLED=0
HONEYCOMB_API_KEY=your-honeycomb-api-key
HONEYCOMB_DATASET=clipyai-production

# Service Configuration
WORKER_REPLICAS=3

# Load Balancer
NGINX_PORT=80
NGINX_SSL_PORT=443